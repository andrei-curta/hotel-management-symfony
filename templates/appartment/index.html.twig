{% extends 'base.html.twig' %}

{% block title %}Appartment index{% endblock %}

{% block body %}
    <h1>Appartment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>NumberOfRooms</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appartment in appartments %}
            <tr>
                <td>{{ appartment.id }}</td>
                <td>{{ appartment.description }}</td>
                <td>{{ appartment.numberOfRooms }}</td>
                <td>{{ appartment.image }}</td>
                <td>
                    <a href="{{ path('appartment_show', {'id': appartment.id}) }}">show</a>
                    <a href="{{ path('appartment_edit', {'id': appartment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('appartment_new') }}">Create new</a>
{% endblock %}
